<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
  <%= message %>
  <% end %>
<% end %>

<div class='body'>
  <div class='container'>

  <p id="notice"></p>

  <div class='row'>
	<div class='col-md-6 col-md-offset-3'>
		<h1>Editing Book</h1>
    <%= form_for(@book) do |f| %>
  <h2>Title</h2>
    <%= f.text_field :title %>
  <h2>Opinion</h2>
    <%= f.text_area :body %>

    <%= f.submit "Update Book" %>
<% end %>

    <div class='col-md-3'>
    </div>
</div>
