<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
  <%= message %>
  <% end %>
<% end %>

<div class="col-lg-3">
<h1>User Info</h1>
  <table class="profile">
    <tr>
	    <th>name</th>
	    <td><%= @user.name %></td>
    </tr>
    <tr>
	    <th>introduction</th>
	    <td><%= @user.introduction %></td>
    </tr>
    	<%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %>
  </table>
    <%= link_to edit_user_path(current_user) do %>
      <button class="btn btn-default" aria-label="Center Align" type="button">
       <span class="glyphicon glyphicon-align-center" aria-hidden="true"></span>
    </button>
    <% end %>

<h1>New book</h1>
  <%= form_for(@book) do |f| %>
  <h2>Title</h2>
    <%= f.text_field :title %>
  <h2>Opinion</h2>
    <%= f.text_area :body %>

    <%= f.submit "Create Book" %>
<% end %>
</div>

<div class="col-lg-9">
	<h1>Books</h1>
	 <table class="table table-striped">
	  <tr>
	    <th></th>
	   <th>Title</th>
	   <th>Opinion</th>
	 </tr>
	 <% @books.each do |book| %>
	 <tr>
	  <td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: "40x40" %></td>
	  <td><%= link_to book.title, book_path(book.id) %></td>
	  <td><%= book.body %></td>
	 </tr>
	 <% end %>
	</table>
</div>



