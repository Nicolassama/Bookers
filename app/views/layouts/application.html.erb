
<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
<body>
  <div class="body">
    <div class="container">
      <header class="navbar navbar-fixed-top navbar-inverse">
        <nav class='nav navbar-nav navbar-left' >
          <span>Bookers</span>
        </nav>

        <div id="slidemenu">
          <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">

            <% if user_signed_in? %>
                <%= link_to 'Home', user_path(current_user.id), class: "glyphicon glyphicon-home" %>
                <%= link_to 'Users', users_path, class: "glyphicon glyphicon-user" %>
                <%= link_to 'Books', books_path, class: "glyphicon glyphicon-book" %>
                <%= link_to "logout", destroy_user_session_path, class: "glyphicon glyphicon-log-out", method: :delete %>

            <% else %>
              <nav>
                <ul class="nav navbar-nav navbar-right">
                  <%= link_to 'Home', root_path, class: "glyphicon glyphicon-home" %>
                  <%= link_to 'About', home_about_path, class: "glyphicon glyphicon-link about" %>
                  <%= link_to 'Sign up', '/users/sign_up', class: "glyphicon glyphicon-new-window" %>
                  <%= link_to 'Log in', '/users/sign_in', class: "glyphicon glyphicon-log-in" %>
                </ul>
              </nav>
            <% end %>
          </ul>
        </div>
      </header>
      <% if flash[:notice] %>
       <%= flash[:notice] %>
      <% end %>

     <%= yield %>
    </div>
    <footer>
  <div class='container'>
    <div class='row'>
      <div class='col-xs-3 col-xs-offset-9'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>
  </div>
</body>
</html>
